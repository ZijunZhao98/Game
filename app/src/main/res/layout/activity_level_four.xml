<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".levelFour" tools:layout_editor_absoluteY="25dp">

    <ImageView android:id="@+id/levelFourBackground"
               android:src="@drawable/white"
               android:scaleType="centerCrop"
               android:gravity="center"
               android:layout_height="wrap_content"
               android:layout_width="wrap_content"
               app:layout_constraintTop_toTopOf="@+id/btn_holder4"
               app:layout_constraintStart_toStartOf="@+id/btn_holder4"/>

    <TextView android:id="@+id/levelFourText"
              android:textColor="#000"
              android:textSize="20sp"
              android:layout_marginTop="100dp"
              android:text="But in the end, I hope we will all reach our goals."
              android:gravity="center"
              android:layout_centerHorizontal="true"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"/>

    <TextView android:id="@+id/finishText"
              android:textColor="#000"
              android:textSize="50sp"
              android:layout_marginTop="100dp"
              android:text=""
              android:gravity="center"
              android:layout_centerHorizontal="true"
              android:layout_centerVertical="true"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"/>

    <FrameLayout
            android:layout_alignParentTop="true"
            android:id="@+id/btn_holder4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
    </FrameLayout>

</RelativeLayout>